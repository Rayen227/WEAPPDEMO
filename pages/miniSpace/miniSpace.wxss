page {
  margin: 0;
  padding: 0;
}

.background { 
  z-index: -1;
  background-color: lawngreen;
}

.background image {
  display: inline-block;
  margin-bottom: 130rpx;
  width: 1680px;
  height: 1024px;
  overflow-y: scroll;
  white-space: nowrap;  
  z-index: -1;
}

.menu {
  position: fixed;
  top: 150rpx;
  /* background-color: cornflowerblue; */
}

.setup {
  margin: 20rpx;
  width: 80rpx;
  height: 80rpx;
  /* color: brown; */
}

.screenshot {
  margin: 20rpx;
  width: 80rpx;
  height: 80rpx;
  /* color: brown; */
}

.list{
    overflow-y: scroll;
    white-space: nowrap;  
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 150rpx;
    background-color: coral;
  }

.classify{
    display: inline-block;
    margin:25rpx 25rpx 25rpx 0;
    width: 100rpx;
    height: 100rpx;
    background-color: cornflowerblue;
  }

.classify:nth-child(1){
  margin:25rpx 25rpx 25rpx 25rpx;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
  }