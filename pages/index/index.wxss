.head {
  box-sizing: border-box;
  margin: 60rpx auto;
  margin-bottom: 10rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: crimson;
}

.setup {
  position: absolute;
  box-sizing: border-box;
  right: 10rpx;
  top: 10rpx;
  width: 90rpx;
  height: 90rpx;
  background-color: crimson;
}

.rank {
  margin: 70rpx auto;
  width: 80%;
  height: 300rpx;
  background-color: darkgoldenrod;
}

.game {
  margin: 80rpx auto;
  width: 400rpx;
  height: 130rpx;
