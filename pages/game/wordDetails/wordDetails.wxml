<!-- 音量设置 -->
<view class="musicSetup" hover-class="select">
    <view class="iconfont icon-gufengwujianzhongguofenggudaileqipipa_huaban_huaban_huaban_huaban"></view>
</view>
<!-- 单词 -->
<view class="font word">
    <view>{{word.en}}</view>
    <view>{{word.ch}}</view>
    <view>{{word.accent}}</view>
    <view class="iconfont icon-laba play" bind:tap="playMp3"></view>
</view>
<!-- 例句 -->
<view class="font example">
    <view>{{word.sentenceCh}}</view>
    <view>{{word.sentenceEn}}</view>
    <image class="jpg" src="{{word.jpg}}"></image>
</view>
<audio src="{{word.mp3}}" id="mp3"></audio>