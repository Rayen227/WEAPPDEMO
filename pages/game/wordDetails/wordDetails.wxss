page {
background-color: skyblue;
margin: 0;
padding: 0;
}

/* 单词 */
.word{
  overflow: hidden;
  margin-top: 20rpx;
  padding: 20rpx 20rpx 20rpx 30rpx;
  background-color: palegoldenrod; 
}
text {
  font-size: 40rpx;
  font-weight: 900;
  line-height: 100rpx;
  color: rgb(111, 0, 255);
}

/* 单词--英文 */
.word view:nth-child(1) {
  font-size: 60rpx;
  font-weight: bolder;
  line-height: 100rpx;
}

/* 单词--中文 */
.word view:nth-child(2) {
  font-size: 50rpx;
  font-weight: 700;
  color: gray;
  line-height: .9em;
}

/* 单词--音标 */
.word view:nth-child(3) {
  font-size: 50rpx;
  font-weight: 700;
  color: gray;
}

/* 喇叭 */
.play {
  display: inline;
  font-size: 50rpx;
  color: #a52a2a;
}

.example {
  margin-top: 40rpx;
}

.example view:nth-child(odd){
  margin-top: 10rpx;
  padding-top: 20rpx;
  padding-left: 40rpx;
  background-color: burlywood;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 72rpx;
  color: #717171;
}

.example view:nth-child(even){
  padding-top: 10rpx;
  padding-left: 40rpx;
  background-color: burlywood;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 72rpx;
  color: #717171;
}

.back {
  margin: 30rpx auto;
  width: 300rpx;
  height: 100rpx;
  font-size: 60rpx;
  font-weight: 1000;
  line-height: 100rpx;
  text-align: center;
  background-color: hotpink;
}
.jpg{
  margin-top: 40rpx;
  margin-left: 23%;
  width: 200px;
  height: 200px;
  background-color: lawngreen;
  }

