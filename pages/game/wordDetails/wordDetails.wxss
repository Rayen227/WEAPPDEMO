page {
background-color: skyblue;
margin: 0;
padding: 0;
}

/* 单词 */
.word{
  overflow: hidden;
  margin-top: 20rpx;
  padding: 20rpx 20rpx 20rpx 30rpx;
  background-color: palegoldenrod; 
}

/* 单词--英文 */
.word view:nth-child(1) {
  font-size: 60rpx;
  font-weight: bolder;
}

/* 单词--中文 */
.word view:nth-child(2) {
  font-size: 50rpx;
  font-weight: 700;
  color: gray;
  line-height: .9em;
}

/* 单词--音标 */
.word view:nth-child(3) {
  font-size: 50rpx;
  font-weight: 700;
  color: gray;
}

/* 喇叭 */
.play {
  display: inline;
  font-size: 50rpx;
  color: #a52a2a;
}

