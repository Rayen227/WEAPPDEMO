<!-- problem 引入方式？ -->
<view class="question">{{problem}}</view>
<!-- 选项 -->
<view class="answer">
    <!-- 使用 selected 判断？ -->
    <view class="options" hover-class="{{ correct? answer-hover-true : answer-hover-false}}">
        1{{options[0]}}
    </view>
    <view class="options" hover-class="{{ correct? answer-hover-true : answer-hover-false}}">
        2{{options[1]}}
    </view>
    <view class="options" hover-class="{{ correct? answer-hover-true : answer-hover-false}}">
        3{{options[2]}}
    </view>
    <view class="options" hover-class="{{ correct? answer-hover-true : answer-hover-false}}">
        4{{options[3]}}
    </view>
</view>
