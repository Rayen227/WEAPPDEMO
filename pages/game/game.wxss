/* 提问区的小盒子的样式的结束 by cjq */

.question {
    position: relative;
    box-sizing:border-box;
    margin:120rpx auto 100rpx;
    padding: 30rpx;
    width: 550rpx;
    height: 300rpx;
    /* background-color: lightcoral; */
    font-size: 90rpx;
    font-weight: bolder;
    color: black;
    text-shadow: 1rpx 1rpx gray;
    line-height: 240rpx;
    text-align: center;
}
.question image {
    width: 550rpx;
    height: 300rpx;
}
.position_up {
    position: absolute;
    top: 44rpx;
    left: 442rpx;
    width: 165rpx;
    height: 78rpx;
    
}

.answer {
    box-sizing: border-box;
    margin: 0 auto;
    width: 680rpx;
    font-size: 48rpx;
    text-shadow: 3rpx 3rpx grey;
    line-height: 200rpx;
    text-align: center;
}

/* 清除浮动 */
.answer:after {
    content: "";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.answer .options {
    margin-bottom: 40rpx;
    width: 320rpx;
    height: 200rpx;
    background-size: 320rpx 200rpx;
    background-image: url(https://7465-test-h043w-1301939913.tcb.qcloud.la/images/game/choose.png?sign=196ae54f34fb385cf98bfbb0b103dfcc&t=1589639279);
}

