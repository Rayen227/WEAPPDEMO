/* 提问区的小盒子的样式的结束 by cjq */

.question {
    position: relative;
    box-sizing:border-box;
    margin:120rpx auto 100rpx;
    padding: 30rpx;
    width: 550rpx;
    height: 300rpx;
    /* background-color: lightcoral; */
    font-size: 90rpx;
    font-weight: bolder;
    color: black;
    text-shadow: 1rpx 1rpx gray;
    line-height: 240rpx;
    text-align: center;
}
.question image {
    width: 550rpx;
    height: 300rpx;
}
.position_up {
    position: absolute;
    top: 44rpx;
    left: 442rpx;
    width: 165rpx;
    height: 78rpx;
    
}

.answer {
    box-sizing: border-box;
    margin: 0 auto;
    width: 680rpx;
    /* 待删 */
    background-color: slateblue; 
    font-size: 48rpx;
    /* font-weight: bold; */
    text-shadow: 3rpx 3rpx grey;
    line-height: 200rpx;
    text-align: center;
}

/* 清除浮动 */
.answer:after {
    content: "";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.answer .options {
    margin-bottom: 40rpx;
    width: 320rpx;
    height: 200rpx;
    background-color: pink;
}

.answer view:nth-child(odd) {
    float: left;
    /* margin-bottom: 40rpx;
    width: 320rpx;
    height: 200rpx;
    background-color: pink; */
}

.answer view:nth-child(even) {
    float: right;
    /* margin-bottom: 40rpx;
    width: 320rpx;
    height: 200rpx;
    background-color: pink; */
}

/* 注意权值 */
.answer .answer-hover-true {
    font-weight: bolder;
    text-shadow: 3rpx 3rpx grey;
    background-color: sandybrown;
}

.answer .answer-hover-false {
    font-weight: bolder;
    text-shadow: 3rpx 3rpx hotpink;
    color: red;
    background-color: hotpink;
}

