.page {
    background-color: bisque;
    /* width: 100%;
    height: 100%; */
    position:fixed; 
    background-size:100% 100%;
    display:flex;
    /* 不加：混乱
       加：无法全局显示 */
    flex-direction: column;
}

.menu {
    text-align: left;
    margin-left: 10rpx;
    background-color: cornflowerblue;
    width: 90rpx;
    height: 60rpx;

    font-size: 40rpx;
    font-weight: bolder;
    color: white;
    /* 居中问题 上下不居中*/
    /* line-height: 350rpx;  * 垂直居中 *  */
    text-align: center;   /** 水平居中 **/
}
.menu-hover {
    text-align: left;
    margin-left: 10rpx;
    background-color: rgb(36, 105, 233);
    width: 90rpx;
    height: 60rpx;

    font-size: 40rpx;
    font-weight: bolder;
    color: white;
}
/* 全局设置 */
.q-a {
    display: flex;    /*设置显示样式**/
    align-items: center;    /**子view垂直居中*/
    vertical-align: center; /**垂直居中*/
    justify-content: center; /**内容居中*/
    flex-direction: column;
}



/* 问题 */
.question {
    width: 80%;
    height: 20%;
    background-color: rgb(47, 113, 255);
    margin-top: 80rpx;
    margin-bottom: 35rpx;

    color: black;
    font-size: 80rpx;
    font-weight: bolder;
}

/* 选项卡 */
.butt {
    width: 500rpx;
    height: 100rpx;
    background-color: rgb(102, 236, 84);
    margin-top: 35rpx;
    margin-bottom: 35rpx;

    justify-content: space-around;
    display: flex;
    align-items: center;
    font-size: 48rpx;
    font-weight: bolder;
    flex-direction: column;
}
/* 正确选项 */
.butt-hover-false {
    width: 500rpx;
    height: 100rpx;
    background-color: red;
    margin-top: 35rpx;
    margin-bottom: 35rpx;

    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    font-size: 48rpx;
    font-weight: bolder;
}
/* 错误选项 */
.butt-hover-true {
    width: 500rpx;
    height: 100rpx;
    background-color: rgb(0, 187, 37);
    margin-top: 35rpx;
    margin-bottom: 35rpx;

    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    font-size: 48rpx;
    font-weight: bolder;
}
