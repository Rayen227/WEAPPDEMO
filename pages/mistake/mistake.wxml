<view class="pg">
   <!-- 上方 -->
   <view class="nav">
      <view bind:tap="showMistaken" class="{{isCurrent[0]}}">错题</view>
      <view bind:tap="showCollected" class="{{isCurrent[1]}}">收藏</view>
      <view bind:tap="showCompleted" class="{{isCurrent[2]}}">历史错题</view>
   </view>
   <!-- 中部 -->
   <view class="problem">
      <view wx:for="{{wordList}}" wx:for-index="index" wx:for-item="item" data-index="{{index}}" catch:tap="showDetails" class="options">
         {{item.en}}
         <!-- <view class="options"> -->
         <image class="del" src="{{src}}" catch:tap="setCompleted" data-index="{{index}}" />
         <!-- <view class="del" hover-class="hoverdel"></view> -->
      </view>
   </view>
   <!-- 下面 -->
   <view class="kong"></view>
</view>