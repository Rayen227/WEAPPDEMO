page {
  background-color: rgb(243, 219, 174);
  margin: 0;
  padding: 0;
}
.pg {
  width: 100vw;
height: 100vh;
overflow-x: hidden;
overflow-y: auto;
}
.pg::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  }

/* 上方 */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  text-align: center;
  background-color: rgb(243, 219, 174);
  z-index: 2;

}
.nav view {
  display: inline-block;
  box-sizing: border-box;
  border-style:outset;

  margin: 20rpx 20rpx;
  padding: 0 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 30rpx;
  background-color: rgb(130, 189, 243);
  /* background-color: lawngreen; */
}
.nav .hovering {
  background-color: rgb(54, 150, 240);
}


