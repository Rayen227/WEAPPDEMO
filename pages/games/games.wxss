/* 问题 */
.question {
    box-sizing:border-box;
    margin: 40rpx auto 80rpx;
    padding: 80rpx 0 0;
    width: 550rpx;
    height: 380rpx;
    background-image: url(https://656c-elay-t6atq-1302369471.tcb.qcloud.la/program/game/question.png?sign=ba04f78833abce05364aa12236658966&t=1613741970);
    background-size: 550rpx 380rpx;
}

.question view {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size: 90rpx;
    font-weight: bolder;
    color: black;
    text-shadow: 1rpx 1rpx gray;
    line-height:.9em;
}
.question image {
    width: 550rpx;
    height: 300rpx;
}
.answer {
    box-sizing: border-box;
    margin: 0 auto;
    width: 680rpx;
}
.answer:after {
    content: "";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}
.answer .options {
    margin-bottom: 40rpx;
    width: 320rpx;
    height: 200rpx;
    background-size: 320rpx 200rpx;
    background-image: url(https://7465-test-h043w-1301939913.tcb.qcloud.la/images/game/choose.png?sign=196ae54f34fb385cf98bfbb0b103dfcc&t=1589639279);
}
.answer view view {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;   
    justify-content: center;
    text-align: center;
    font-weight: bolder;
    color: black;
    line-height:.9em;
    font-size: 48rpx;
    text-shadow: 3rpx 3rpx rgb(179, 179, 179);
}
.answer view:nth-child(odd) {
    float: left;
}
.answer view:nth-child(even) {
    float: right;
}
.answer .answer-hover-true {
    font-weight: bolder;
    text-shadow: 3rpx 3rpx grey;
    color: rgb(1, 109, 1);
    background-image: url(https://7465-test-h043w-1301939913.tcb.qcloud.la/images/game/choose_t.png?sign=8ac9c6c1e402450c5d5a02ed9e978ebb&t=1589639203);
}
.answer .answer-hover-false {
    font-weight: bolder;
    text-shadow: 3rpx 3rpx hotpink;
    color: red;
    background-image: url(https://7465-test-h043w-1301939913.tcb.qcloud.la/images/game/choose_f.png?sign=a5d2cb344a4de7ed925d236a458ccb85&t=1589639385);
}
